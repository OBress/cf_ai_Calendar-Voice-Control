# Cloudflare Worker endpoint + auth
AURORA_WORKER_URL=https://your-worker.workers.dev
AURORA_WORKER_TOKEN=(openssl rand -hex 32)

# Picovoice credentials and keyword locations
PORCUPINE_ACCESS_KEY=pv_your_access_key
PORCUPINE_KEYWORD_PATH=artifacts/hey_aurora_windows.ppn
PORCUPINE_MODEL_PATH=artifacts/porcupine_params_windows.pv   # optional if using default

# Wake-word detection tuning
PORCUPINE_SENSITIVITY=0.6       # 0â€“1, higher = more sensitive
AUDIO_INPUT_DEVICE=default      # run `arecord -l` / `sox -V` for exact name if needed

# Recorder behavior
RECORDER_SILENCE_MS=1200        # ms of silence to stop recording
RECORDER_MAX_MS=10000           # hard cap in ms
RECORDER_THRESHOLD=1300         # amplitude threshold for speech detection

# UI endpoint
AURORA_UI_URL=http://localhost:5173